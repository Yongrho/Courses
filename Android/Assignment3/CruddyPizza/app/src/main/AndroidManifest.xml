<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cruddypizza">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_pizza"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_pizza"
        android:supportsRtl="true"
        android:theme="@style/Theme.CruddyPizza">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_main"/>
        <activity
            android:name=".BuildActivity"
            android:label="@string/title_activity_build" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/customer" />
        <activity
            android:name=".ConfirmOrderActivity"
            android:label="@string/order" />
    </application>

</manifest>